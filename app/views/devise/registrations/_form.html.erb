<div class="card-main">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: TailwindFormBuilder, html: { class: 'form' }) do |form| %>
    <div class="grid grid-cols-6 gap-6 grid-flow-row">
      <div class="col-span-6">
        <%= form.label :username %>
        <%= form.text_field :username, required: true, autofocus: true, class: 'form__element', data: { test_id: 'username_field' } %>
      </div>

      <div class="col-span-6">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, value: params[:email], class: 'form__element', data: { test_id: 'email_field' } %>
      </div>

      <div class="col-span-6">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, class: 'form__element', data: { test_id: 'password_field' } %>
      </div>

      <div class="col-span-6">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, required: true, class: 'form__element', data: { test_id: 'password_confirmation_field' } %>
      </div>

      <div class="col-span-6 text-center">
        <%= link_to 'By signing up, you agree to our terms of use.', terms_of_use_path, class: 'font-medium text-gray-600 hover:underline text-sm' %>
      </div>
    </div>

    <div class="form__button-section">
      <%= form.submit 'Sign up', class: 'button button--primary full-width', data: {test_id: 'submit_btn'} %>
    </div>
  <% end %>

  <div class="form-divider text-center">
    <span class="form-divider__text">OR SIGN UP WITH</span>
  </div>

  <%= render 'shared/omniauth_buttons' %>
</div>
