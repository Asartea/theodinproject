<%= title('Settings') %>

<div class="bg-gray-100 h-full">
  <div class="page-container">

    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
      <aside class="py-6 px-2 sm:px-6 lg:py-0 lg:px-0 lg:col-span-3">
        <%= render Navigation::VerticalComponent.new do |c| %>
          <% c.with_links([
            { name: "Profile", href: edit_users_profile_path, icon_path: 'user-circle.svg' },
            { name: "Password", href: edit_password_path, icon_path: 'key.svg' },
          ]) %>
        <% end %>
      </aside>

      <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), builder: TailwindFormBuilder, html: { method: :put } do |form| %>
          <%= render CardComponent.new(classes: "odin-dark-bg-accent") do |card| %>
            <% card.header do %>
              <h3 class="text-lg leading-6 font-medium text-gray-900">Change your password</h3>
            <% end %>

            <% card.body do %>
              <div class="grid grid-cols-6 gap-6 grid-flow-row">
                <div class="col-span-6 sm:col-span-4">
                  <%= form.label :current_password %>
                  <%= form.password_field :current_password %>
                </div>

                <div class="col-span-6 sm:col-span-4">
                  <%= form.label :password %>
                  <%= form.password_field :password %>
                </div>

                <div class="col-span-6 sm:col-span-4">
                  <%= form.label :password_confirmation %>
                  <%= form.password_field :password_confirmation %>
                </div>
              </div>
            <% end %>

            <% card.footer(classes: "px-4 py-3 pt-3 bg-gray-50 text-right sm:px-6") do %>
              <%= form.submit "Save", class: "button button--primary py-2 px-4 text-sm" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
