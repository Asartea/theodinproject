<div class="card-main">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: TailwindFormBuilder, html: { class: "form" }) do |form| %>
    <div class="grid grid-cols-6 gap-6 grid-flow-row">
      <div class="col-span-6 sm:col-span-6">
        <%= form.label :email %>
        <%= form.email_field :email, required: false, autofocus: true, class: 'form__element', placeholder: 'Email Address', data: { test_id: 'email-field' } %>
      </div>

      <div class="col-span-6 sm:col-span-6">
        <%= form.label :password %>
        <%= form.password_field :password, required: false, class: 'form__element', placeholder: "Password", data: { test_id: 'password-field' } %>
      </div>

      <div class="flex items-center justify-between col-span-6">
        <div class="flex items-center">
          <%= form.check_box :remember_me, checked: true, class: 'text-teal-600 focus:ring-teal-500' %>
          <%= form.label :remember_me, class: 'ml-2 block text-sm text-gray-900 mb-0' %>
        </div>

        <div class="text-sm">
         <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-medium text-gold-600 hover:text-gold-500' %>
        </div>
      </div>
    </div>

    <div class="form__button-section">
      <%= form.submit "Login", class: "button button--primary full-width", data: { test_id: 'submit-btn' } %>
    </div>
  <% end %>

  <div class="form-divider text-center">
    <span class="form-divider__text">OR LOG IN WITH</span>
  </div>

  <div class="text-center">
    <%= render "shared/omniauth_buttons" %>
  </div>
</div>
