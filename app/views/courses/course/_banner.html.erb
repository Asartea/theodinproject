<div class="mb-6">
  <div class='flex justify-center'>
    <%= render Progress::BadgeComponent.new(
      course: course,
      current_user: current_user,
      url: courses_progress_path(course.id)
    )%>
  </div>

  <%= link_to path_course_url(course.path, course), class: 'hover:no-underline' do %>
    <h1 class="mt-4 text-center text-4xl font-light mx-auto text-gray-800" data-test-id="course-title-header"><%= course.title %></h1>
  <% end %>
</div>
