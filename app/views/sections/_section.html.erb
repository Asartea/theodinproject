<%= render CardComponent.new(classes: 'mb-10') do |card| %>
  <% card.header(classes: 'px-6 pt-6') do %>
    <%= link_to "##{section.title.parameterize}", id: section.title.parameterize, class: 'no-underline' do %>
      <h3 class="text-xl font-medium text-gray-700 anchor-link dark:text-gray-300">
        <%= section.title %>
      </h3>
    <% end %>

  <% end %>

  <% card.body(classes: 'py-4 px-4') do %>
    <div class="flex flex-col divide-y divide-gray-200 dark:divide-gray-700" data-test-id="course-section">
      <% section.lessons.each do |lesson| %>
        <%= render Sections::LessonComponent.new(lesson:, current_user:) %>
      <% end %>
    </div>
  <% end %>
<% end %>
