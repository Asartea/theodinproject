<%= title("All Paths") %>

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="max-w-3xl mx-auto ">
  <div class="bg-white overflow-hidden shadow-2xl rounded-lg">
    <div class="px-4 pt-8 pb-6 sm:px-8 flex justify-between items-center">
      <div>
        <h3 class="text-1xl mb-3 text-gold-600">PREREQUISITE COURSE</h3>
        <h2 class="text-3xl font-semibold">Foundations</h2>
      </div>

      <div>
        <button type="button" class="text-lg inline-flex items-center px-20 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-odin-green-600 hover:bg-odin-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-odin-green-500">
          Resume
        </button>
      </div>
    </div>
    <div class="px-8 pb-8 sm:px-8">
      <p class="text-gray-700 leading-normal text-base"><%= @default_path.description %></p>
    </div>
  </div>


  <h2 class="text-2xl font-semibold text-center p-10">Choose your learning path:</h2>

  <div class="flex gap-x-6">
    <% @paths.each do |path| %>
      <div class="bg-white overflow-hidden shadow-2xl rounded-lg">
        <div class="px-4 pt-8 pb-6 sm:px-8 flex flex-col justify-between items-center">
          <div>
            <%= image_tag PATH_BADGES.fetch(path.title), alt: "#{path.title} badge", class: 'w-24 h-24' %>
          </div>

          <div class="w-full flex justify-between pt-6">
            <p class="text-lg text-gold-600">PATH</p>
            <p class="text-lg text-gray-300"><%= path.lessons.size %> LESSONS</p>
          </div>
        </div>
        <div class="px-8 pb-8 sm:px-8">
          <h2 class="text-2xl font-semibold pb-4"><%= path.title %></h2>
          <p class="text-gray-700 leading-normal text-base"><%= path.description %></p>

        </div>

        <div class="px-4 pt-4 pb-8 sm:px-6">
          <div class="flex justify-center">
            <button type="button" class="text-center text-lg inline-flex items-center px-20 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-odin-green-600 hover:bg-odin-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-odin-green-500">
              Select
            </button>
          </div>
          <!-- Content goes here -->
          <!-- We use less vertical padding on card footers at all sizes than on headers or body sections -->
        </div>
      </div>
    <% end%>
  </div>
</div>
