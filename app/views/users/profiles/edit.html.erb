<%= title('Settings') %>

<div class="bg-gray-100">
  <div class="page-container">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
      <aside class="py-6 px-2 sm:px-6 lg:py-0 lg:px-0 lg:col-span-3">
        <%= render Navigation::VerticalComponent.new do |c| %>
          <% c.with_links([
            { name: "Profile", href: edit_users_profile_path, icon_path: 'user-circle.svg' },
            { name: "Password", href: edit_password_path, icon_path: 'key.svg' },
          ]) %>
        <% end %>
      </aside>

      <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
        <%= form_with model: current_user, url: users_profile_path do |form| %>
          <%= render CardComponent.new(classes: "odin-dark-bg-accent") do |card| %>
            <% card.header do %>
              <h3 class="text-lg leading-6 font-medium text-gray-900">Profile</h3>
                <p class="mt-1 text-sm text-gray-500">Profile information will be displayed on your dashboard.</p>
            <% end %>

            <% card.body do %>
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 sm:col-span-3">


                  <div>
                    <%= form.label :username, class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <%= form.text_field :username, class: "block w-full border rounded-md border-gray-300 py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-base #{'pr-10 border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500' if current_user.errors[:username].present? }" %>

                      <% if current_user.errors[:username].present? %>
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                          <%= inline_svg_tag 'icons/exclaimation-circle.svg', class: 'h-5 w-5 text-red-500', aria: true, title: 'Error', desc: 'Error icon' %>
                        </div>
                      <% end %>
                    </div>
                    <% if current_user.errors[:username].present? %>
                      <p class="mt-2 text-sm text-red-600" id="email-error"><%= current_user.errors[:username].first %></p>
                    <% end %>
                  </div>
                </div>



                <div class="col-span-6 sm:col-span-4">
                  <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
                  <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-base" %>
                </div>

                <div class="col-span-6 sm:col-span-6">
                  <%= form.label :learning_goal, class: "block text-sm font-medium text-gray-700" %>
                  <%= form.text_area :learning_goal, placeholder: "I wanna be the very best...", rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-base" %>
                </div>
              </div>
            <% end %>

            <% card.footer(classes: "px-4 py-3 pt-3 bg-gray-50 text-right sm:px-6") do %>
              <%= form.submit "Save", class: "button button--primary py-2 px-4 text-sm" %>
            <% end %>
          <% end %>
        <% end %>

        <%= render CardComponent.new(classes: "odin-dark-bg-accent") do |card| %>
          <% card.header do %>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Danger Zone</h3>
             <p class="mt-1 text-sm text-gray-500">Careful, these actions can not be undone.</p>
          <% end %>

          <% card.body do %>
            <div class="inline-flex flex-col space-y-5">
              <%= link_to users_progress_path(current_user), class: 'button button--clear px-3 py-2 text-sm', data: { confirm: 'Are you sure?', test_id: 'user-reset-progress-link' }, method: :delete do %>
                <%= inline_svg_tag "icons/refresh.svg", class: "-ml-0.5 mr-2 h-4 w-4 text-red-600", aria: true, title: "Refresh icon" %>
                Reset progress
              <% end %>

              <%= link_to registration_path(current_user), class: 'button button--clear px-3 py-2 text-sm', data: { confirm: 'Are you sure?', test_id: 'user-account-delete-link' }, method: :delete do %>
                <%= inline_svg_tag "icons/trash.svg", class: "-ml-0.5 mr-2 h-4 w-4 text-red-600", aria: true, title: "Trash can icon" %>
                Delete account
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
