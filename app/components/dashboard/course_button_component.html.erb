<% if current_user.progress_for(course).completed? %>
  <%= link_to 'Open', path_course_path(path, course), class: 'button button--clear button--medium', data: { test_id: "#{course.title.downcase}-open-btn" } %>
<% elsif current_user.started_course?(course) %>
  <%= link_to 'Resume', resume_lesson_path, class: 'button button--clear button--medium', data: { test_id: "#{course.title.downcase}-resume-btn" } %>
<% else %>
  <%= link_to 'Start', path_course_url(path, course), class: 'button button--clear button--medium', data: { test_id: "#{course.title.downcase}-start-btn" } %>
<% end %>
