<%= tag.turbo_frame_tag id: "complete_button", data: { turbo: true } do %>

  <% if lesson_completed? %>
    <%= link_to lesson_completion_path(lesson.id), data: { turbo_method: :delete }, class: "button button--primary h-full complete-button md:w-60 w-full" do %>
      <%= inline_svg_tag 'icons/checkmark-circle-solid.svg', class: 'h-6 pr-2', aria: true, title: 'check', desc: 'checkmark icon' %>
      Lesson Completed
    <% end %>
  <% else %>
    <%= link_to lesson_completion_path(lesson.id), data: { turbo_method: :post }, class: "button button--primary md:w-60 w-full h-full" do %>
      Mark Complete
    <% end %>
  <% end %>
<% end %>
